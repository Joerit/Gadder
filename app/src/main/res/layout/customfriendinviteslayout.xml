<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/txtFriendInviteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="28dp"
            android:text="TextView"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnAcceptInvite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/txtFriendInviteName"
            android:layout_alignBottom="@+id/btnDeclineInvite"
            android:layout_toStartOf="@+id/btnDeclineInvite"
            android:background="@drawable/roundgreenbutton"
            android:text="V"
            android:layout_marginRight="5pt"/>

        <Button
            android:id="@+id/btnDeclineInvite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/txtFriendInviteName"
            android:layout_alignBottom="@+id/txtFriendInviteName"
            android:layout_alignParentEnd="true"
            android:background="@drawable/roundredbutton"
            android:text="X"
            android:layout_marginRight="5pt"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>